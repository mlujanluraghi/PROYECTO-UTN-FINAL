<div class="container" style="margin-top: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar</h4>
            <form action="/admin/novedades/agregar" method="post">
                <div class="mb-3 row"></div>

                <div class="form-group">
                    <div class="ingreso">
                        <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                    </div>
                </div>
                <div class="mb-3 row"></div>
                <div class="form-group">
                    <textarea name="subtitulo" type="text" class="form-control" placeholder="Subtitulo"></textarea>
                </div>
                <div class="mb-3 row"></div>
                <div class="form-group">
                    <textarea name="cuerpo" type="text" class="form-control" placeholder="Cuerpo"></textarea>
                </div>
                <div class="mb-3 row"></div>
                <div class="boton">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
                <div class="mb-3 row"></div>
            </form>
        </div>
    </div>
    {{#if error}}
    <p>{{message}}</p>
    {{/if}}